# 伺服器設定
NODE_ENV=development
PORT=3000

# 資料庫設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hualien_taxi
DB_USER=postgres
DB_PASSWORD=

# 資料庫連線池優化設定
DB_POOL_MAX=50
DB_POOL_MIN=10

# Redis 快取設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 設定
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h

# CORS 設定
CORS_ORIGIN=*

# 日誌設定
LOG_LEVEL=debug

# Rate Limiting 設定（選填）
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Socket.io 設定（選填）
# SOCKET_PING_TIMEOUT=60000
# SOCKET_PING_INTERVAL=25000

# 檔案上傳限制
# MAX_FILE_SIZE=10mb
# MAX_REQUEST_SIZE=10mb

# API Key（選填，用於第三方服務）
# GOOGLE_MAPS_API_KEY=
# FIREBASE_API_KEY=

# 監控和分析（選填）
# SENTRY_DSN=
# ANALYTICS_ID=
